 <ul class="list-inline">
  <li class="shadow mb-4 p-3 rounded bg-white">
    <h4 class="text-muted text-decoration-none"><%= @user.name %></h4>
    <p><%= @post.text %></p>
    <div class="d-flex justify-content-end">
      <div class="d-flex">
        <div class="mx-2">
          <span>0</span>
          <i class="fas fa-comment mx-1"></i>
        </div>
        <div class="mx-2">
          <span>0</span>
          <i class="fas fa-heart mx-1"></i>
        </div>
      </div>
    </div>
    <ul class="list-inline ml-5">
      <% @post.most_recent_comments.each do |comment| %>
        <li class="border-start border-4 border-info px-2">
          <h5>Username: <%= comment.author.name %></h5>
          <p><%= comment.text %></p>
        </li>
      <% end %>
    </ul>
  </li>
</ul>